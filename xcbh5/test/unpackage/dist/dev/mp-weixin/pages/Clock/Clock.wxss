
.me-container {
	height: 100vh;
	width: 100%;
	box-sizing: border-box;
	color: white;
	z-index: 1;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}
.content {
	height: 100%;
	width: 90%;
	margin: auto auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.state {
	font-size: 60rpx;
	margin-bottom: 100rpx;
	color: black;
}
.clock {
	height: 5%;
	width: 50%;
	font-size: 50rpx;
	border: 1px solid #007aff;
	background-color: #007aff;
	border-radius: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

