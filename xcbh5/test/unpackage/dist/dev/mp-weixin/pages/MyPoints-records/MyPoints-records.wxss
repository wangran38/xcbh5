
.me-container {
	width: 100%;
	box-sizing: border-box;
	padding: 0rpx 25rpx 0 25rpx;
	color: white;
	z-index: 1;
	background-color: #f8f8f8;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.title {
	font-size: 35rpx;
	color: black;
	text-align: center;
	margin-top: 50rpx;
}
.records {
	width: 100%;
	height: 50rpx;
	margin-top: 30rpx;
	color: black;
	/* background-color: aqua; */
	display: flex;
}
.market {
	width: 33%;
	height: 100%;
	/* background-color: bisque; */
	text-align: center;
}

/* .phone {
	width: 35%;
